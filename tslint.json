{
  "extends": "tslint:recommended",
  "rulesDirectory": ["path/to/custom/rules/directory/", "another/path/"],
  "rules": {
    "max-line-length": {
      "options": [120]
    },
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-console": {
      "severity": "warning",
      "options": ["debug", "info", "log", "time", "timeEnd", "trace"]
    },
    "@typescript-eslint/no-empty-object-type": false,
    "react/display-name": false,
    "@typescript-eslint/no-unused-vars": false
  },
  "jsRules": {
    "max-line-length": {
      "options": [120]
    }
  }
}
